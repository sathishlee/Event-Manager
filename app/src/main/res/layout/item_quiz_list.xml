<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/cardview_cardCornerRadius">

    <LinearLayout
        android:id="@+id/ll_que_ans_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:background="@color/content_background"
        >
        <TextView
            android:id="@+id/txt_quize_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1) What is the Original name of Bhaskara Rayar?"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_view_size"
            android:padding="10dp"
            android:lineSpacingExtra="5dp"
            android:fontFamily="@font/roboto_regular"/>

        <EditText
            android:id="@+id/edt_quize_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_view_size"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:lineSpacingExtra="5dp"
            android:background="@color/content_background"
            android:lines="3"
            android:hint="Enter Your Answer Here"
            android:imeOptions="actionDone"
            android:inputType="textImeMultiLine"
            android:fontFamily="@font/roboto_regular"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_but_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="2"
        android:layout_below="@+id/ll_que_ans_view"
        android:visibility="gone">
        <Button
            android:id="@+id/but_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_but_cancel"
            android:background="@color/bgcolor_but_cancel"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/but_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_but_ok"
            android:background="@color/bgcolor_but_ok"
            android:layout_margin="10dp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
