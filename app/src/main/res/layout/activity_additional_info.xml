<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".userProfile.ProfileDetailsActivity">

    <LinearLayout
        android:id="@+id/ll_title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_title_height"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/img_back_press"
            android:layout_width="@dimen/event_title_height"
            android:layout_height="@dimen/event_title_height"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <!--     <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/event_title_height"
                 android:layout_gravity="center"

                 android:fontFamily="@font/roboto_li"
                 android:gravity="top"
                 android:text="Additional Info"
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_title" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/event_title_height"
            android:layout_gravity="center"

            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Additional Info"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/event_title_height"
            android:layout_gravity="center_vertical"

            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:padding="5dp"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_view_size" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/edit_icon_padding"

            android:src="@drawable/ic_edit" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/profile_view_card_margin"

                android:background="@drawable/bg_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/profile_view_card_img_width"
                    android:layout_height="@dimen/profile_view_card_img_height"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/edit_profile_img_margin"
                    android:src="@drawable/ic_how_do_you_know" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_how_do_u_know"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="10dp"
                        android:text=" "
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_view_size" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="10dp"
                        android:text="How do You Know"
                        android:textColor="@color/bgcolor_but_ok"
                        android:textSize="@dimen/text_view_size16" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/profile_view_card_margin"
                android:background="@drawable/bg_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/profile_view_card_img_width"
                    android:layout_height="@dimen/profile_view_card_img_height"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/edit_profile_img_margin"
                    android:src="@drawable/ic_add_information" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/profile_view_card_margin_left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_add_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/profile_view_card_txt_padding"
                        android:text=" "
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_view_size" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/profile_view_card_txt_padding"
                        android:text="Additional Info"
                        android:textColor="@color/bgcolor_but_ok"
                        android:textSize="@dimen/text_view_size16" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>