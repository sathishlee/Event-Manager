<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".dashboard.UnApprovalUserActivity">

    <ImageView
        android:id="@+id/img_title_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top"
        android:src="@drawable/img_title_banner" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/main_activity_margin"
        app:cardBackgroundColor="@color/content_background"
        app:cardCornerRadius="@dimen/cardview_cardCornerRadius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="@dimen/request_layout_padding">

            <TextView
                android:id="@+id/txt_status_discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/request_text_padding"
                android:text="Your status is pending, we will activated soon."
                android:textAlignment="center"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_title" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/but_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/request_button_margin_top"
        android:background="@drawable/bg_primary_button_shape"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/send_email"
        android:textColor="@color/text_white"
        android:textSize="@dimen/button_text_size" />
</RelativeLayout>
