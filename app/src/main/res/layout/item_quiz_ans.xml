<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/content_background">
    <TextView
        android:id="@+id/txt_sno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="1"
        android:padding="@dimen/event_bottom_margin"
        android:layout_margin="@dimen/event_bottom_margin"
        android:textSize="@dimen/text_view_size"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/roboto_medium"
        />
    <TextView
        android:id="@+id/txt_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who reproduced the Vishnu Sahasranamam"
        android:padding="@dimen/event_bottom_margin"
        android:layout_margin="@dimen/event_bottom_margin"
        android:layout_toEndOf="@+id/txt_sno"
        android:textSize="@dimen/text_view_size"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/roboto_medium"/>
    <TextView
        android:id="@+id/txt_quiz_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sahadevan"
        android:padding="@dimen/event_bottom_margin"
        android:layout_toEndOf="@+id/txt_sno"
        android:layout_below="@+id/txt_quiz"
        android:textSize="@dimen/text_view_size"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/roboto_bold"/>

</RelativeLayout>