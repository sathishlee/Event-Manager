<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".notification.NotificationListActivity">
    <LinearLayout
        android:id="@+id/ll_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_title_height"
        android:background="@color/color_title_bar">
        <ImageView
            android:id="@+id/img_back_press"
            android:layout_width="@dimen/event_title_height"
            android:layout_height="@dimen/event_title_height"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/txt_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/event_title_height"
            android:text="Alert"
            android:textStyle="bold"
            android:textSize="@dimen/text_title"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/event_ll_padding"
            android:fontFamily="@font/roboto_bold"

            />

    </LinearLayout>

         <android.support.v7.widget.RecyclerView
        android:id="@+id/recv_notification_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title_bar"
        android:layout_margin="10dp"
        />




</RelativeLayout>