<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rvel_gallery_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/grid_image_height"
    android:layout_margin="@dimen/grid_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/grid_margin_radius">

        <FrameLayout
            android:id="@+id/ll_gallery_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_event_holder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_image_height"
                android:layout_gravity="center"
                android:src="@drawable/exo_controls_play" />
<!-- android:src="@drawable/ic_launcher"
 android:layout_height="@dimen/grid_image_height"
-->
            <TextView
                android:id="@+id/txt_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="top"
                                android:padding="@dimen/photo_gallery_text_padding"
                android:text="Event Name"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/gird_text_view_size"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/bg_content_round_shape"/>
<!--android:lines="3"-->
            <TextView
                android:id="@+id/txt_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:gravity="bottom"
                android:padding="@dimen/photo_gallery_text_padding"
                android:text="30-10-2018"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/grid_date_text_size"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/bg_content_round_shape"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>

